---
import github from "./../assets/icons/github.svg?raw"
import linkedin from "./../assets/icons/linkedin.svg?raw"
---

<div class="container">
  <a href="https://www.github.com/manohysr" class="glass-effect" target="_blank">
    <Fragment set:html={github} />
  </a>
  <a href="https://www.linkedin.com/in/manohy-saotra-rajaonah/" class="glass-effect" target="_blank">
    <Fragment set:html={linkedin} />
  </a>
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .container a {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10rem;
    border: 1px solid black;
    width: 3rem;
    height: 3rem;
    color: white;
    background-color: rgba(0, 0, 0, .8);
  }
</style>
