---
import Layout from './../layout/Layout.astro';
const name = 'Manohy RAJAONAH';
const title = 'I create high-quality software solutions';
const description =
  'I specialize in crafting accessible, user-centered products, with a focus on both system design and development. Bring ideas to life with seamless functionality and intuitive interfaces.';
const fun = "I guess, It's Software Engineering xD";
---

<Layout>
  <div class="big-container" id="home">
    <div class="container">
      <span class="intro">Hi, my name is</span>
      <h1 class="name">{name}</h1>
      <h2 class="title">{title}</h2>
      <div class="description">
        <p>{description}</p>
        <p class="fun-text">{fun}</p>
      </div>
      <div class="button">
        <a href="https://app.cal.com/manohy-rajaonah" class="btn-style">
          Have an interview with me
        </a>
      </div>
    </div>
  </div>
</Layout>

<style>
  .big-container {
    display: flex;
    /* flex-direction: column;
    justify-content: center; */
    align-items: center;
    min-height: 100vh;
    padding: 1rem;
    /* background: #fafafa; */
  }

  .container {
    color: #111;
    display: flex;
    flex-direction: column;
    width: 100%;
    background: white;
    /* box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05); */
  }

  .intro {
    font-size: 1.2rem;
    color: #666;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .name {
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.1;
    color: #000;
    margin: 0 0 1rem 0;
  }

  .title {
    font-size: 2rem;
    font-weight: 700;
    color: #111;
    margin: 0 0 2rem 0;
  }

  .description {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .description p {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #111;
    margin: 0;
  }

  .fun-text {
    font-style: italic;
    color: #111;
  }

  .button {
    margin-top: 1rem;
  }


  @media (max-width: 768px) {
    .btn-style {
      font-size: 1rem;
    }
  }
</style>
